{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "noImplicitAny": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "./types/*"],
      "services/*": ["services/*"],
      "models/*": ["models/*"],
      "controllers/*": ["controllers/*"],
      "routes/*": ["routes/*"],
      "middlewares/*": ["middlewares/*"]
    }
  },
  "include": ["./**/*"]
}
